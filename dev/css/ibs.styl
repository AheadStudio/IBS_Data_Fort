/*** Settings ***/
@import "nib"
@import "../lib/css/css"

global-reset();
reset-html5();
form-reset();
b
strong
i
em
	font-style normal
	font-weight normal

$transitionAnimation = cubic-bezier(0.250, 0.460, 0.450, 0.940)

/* fonts */
@font-face
	font-family "Circe"
	src url("../fonts/Circe.woff") format("woff")

@font-face
	font-family "CirceBold"
	src url("../fonts/CirceBold.woff") format("woff")

@font-face
	font-family "CirceExtraBold"
	src url("../fonts/CirceExtraBold.woff") format("woff")

@font-face
	font-family "CirceExtraLight"
	src url("../fonts/CirceExtraLight.woff") format("woff")

@font-face
	font-family "CirceLight"
	src url("../fonts/CirceLight.woff") format("woff")

@font-face
	font-family "CirceThin"
	src url("../fonts/CirceThin.woff") format("woff")
/* //fonts */

html
	height 100%
body
	position relative
	width 100%
	height 100%
	min-height 100vh
	max-height 100vh
	line-height 1
	cursor default

	color $colorLightBlack

	transition opacity 0.3s $transitionAnimation

.page
	height 100%

.page-content
	display block
	width 100%
	height 100%
	box-sizing border-box

.page-inner
	width 100%
	min-height 100%
	max-height 100%
	margin 0 auto
	display flex
	justify-content space-between

	&--reverse
		flex-flow row-reverse

	&--w1
		max-width 1000px
